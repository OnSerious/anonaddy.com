{
    "require": {
        "tightenco/jigsaw": "^1.3",
        "samdark/sitemap": "^2.2"
    },
    "require-dev": {
        "laravel/pint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\Listeners\\": "listeners/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "format": [
            "./vendor/bin/pint --config pint.json"
        ]
    }
}
